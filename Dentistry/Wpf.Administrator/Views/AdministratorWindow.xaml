<Window x:Class="Wpf.Administrator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dxsch="http://schemas.devexpress.com/winfx/2008/xaml/scheduling"

        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
        xmlns:vm="clr-namespace:Wpf.Administrator.ViewModels"
        xmlns:dialog="clr-namespace:Wpf.Administrator.Infrastructure.DialogService"
        xmlns:local="clr-namespace:Wpf.Administrator.Views"
        
        mc:Ignorable="d"
        Title="Administrator" Height="700" Width="900">
    <!--<dxr:DXRibbonWindow.Resources>
        <dxsch:SchedulerCommands x:Key="commands"/>
    xmlns:dxsch="http://schemas.devexpress.com/winfx/2008/xaml/scheduler"
    </dxr:DXRibbonWindow.Resources>-->

    <Window.Resources>
        <ObjectDataProvider IsAsynchronous="True" ObjectType="{x:Type vm:AdministratorViewModel}" x:Key="data">
            <ObjectDataProvider.ConstructorParameters>
                <dialog:DialogServiceWpf></dialog:DialogServiceWpf>
            </ObjectDataProvider.ConstructorParameters>
        </ObjectDataProvider>
    </Window.Resources>
    
    <Grid Background="WhiteSmoke" DataContext="{Binding Source={StaticResource data}}">
        <dxsch:SchedulerControl x:Name="scheduler"  WorkDays="EveryDay" WorkTime="08:00:00-21:00:00"
            ActiveViewIndex="1"
            CommandBarStyle="Ribbon" FirstDayOfWeek="Monday">

            <dxsch:SchedulerControl.OptionsWindows>
                <dxsch:OptionsWindows AppointmentWindowType="{x:Type local:AppointmentWindow}" RecurrenceWindowType="{x:Type local:AppointmentWindow}" />
            </dxsch:SchedulerControl.OptionsWindows>
            
            <dxsch:DayView x:Name="dayView"
                    Caption="Day View"
                    ResourcesPerPage="5"
                    ShowAllDayArea="False"
                    ShowWorkTimeOnly="False"
                    SnapToCellsMode="Never"
                    TimeScale="00:15:00" />
            <!--<dxsch:WorkWeekView x:Name="workWeekView"
                Caption="Work Week View"
                ResourcesPerPage="5"
                ShowAllDayArea="False"
                ShowWorkTimeOnly="False"
                SnapToCellsMode="Never"
                TimeScale="00:15:00" />-->
            <dxsch:WeekView x:Name="weekView"
                Caption="Week View"
                ResourcesPerPage="5"
                ShowAllDayArea="False"
                ShowWorkTimeOnly="False"
                SnapToCellsMode="Never"
                TimeScale="00:15:00" />
            <dxsch:MonthView x:Name="monthView"
                WeekCount="4" 
                Caption="Month View"/>
            <dxsch:TimelineView x:Name="timelineView">
                <dxsch:TimelineView.TimeScales>
                    <dxsch:TimeScaleYear x:Name="scaleYear" IsEnabled="False"/>
                    <dxsch:TimeScaleQuarter x:Name="scaleQuarter" IsEnabled="False"/>
                    <dxsch:TimeScaleMonth x:Name="scaleMonth" IsEnabled="False"/>
                    <dxsch:TimeScaleWeek x:Name="scaleWeek" IsEnabled="True"/>
                    <dxsch:TimeScaleDay x:Name="scaleDay" IsEnabled="True"/>
                    <dxsch:TimeScaleWorkDay x:Name="scaleWorkDay" IsEnabled="False"/>
                    <dxsch:TimeScaleHour x:Name="scaleHour" IsEnabled="False"/>
                    <dxsch:TimeScaleWorkHour x:Name="scaleWorkHour" IsEnabled="False"/>
                    <dxsch:FixedTimeScale x:Name="scale15minutes" Scale="0:15:0" IsEnabled="False"/>
                </dxsch:TimelineView.TimeScales>
            </dxsch:TimelineView>
            <dxsch:ListView x:Name="listView"
                            Caption="List View" ></dxsch:ListView>

            <dxsch:SchedulerControl.DataSource>
                <dxsch:DataSource AppointmentsSource="{Binding Appointments}"
                      ResourcesSource="{Binding Doctors}">
                    <dxsch:DataSource.ResourceMappings>
                        <dxsch:ResourceMappings Caption="Description"
                                    Id="Id" />
                        
                    </dxsch:DataSource.ResourceMappings>
                    
                    <dxsch:DataSource.AppointmentMappings>
                        <dxsch:AppointmentMappings Description="Description"
                                       End="End"
                                       Id="Id"
                                       LabelId="Label"
                                       RecurrenceInfo="RecurrenceInfo"
                                       ResourceId="ResourceId"
                                       Start="Start"
                                       Subject="Subject"
                                       Type="AppointmentType" >
                            <dxsch:CustomFieldMapping Mapping="PatientName" Name="PatientName"></dxsch:CustomFieldMapping>
                            <dxsch:CustomFieldMapping Mapping="PatientPhone" Name="PatientPhone"></dxsch:CustomFieldMapping>
                            <dxsch:CustomFieldMapping Mapping="PatientEmail" Name="PatientEmail"></dxsch:CustomFieldMapping>
                            <dxsch:CustomFieldMapping Mapping="Services" Name="Services"></dxsch:CustomFieldMapping>
                        </dxsch:AppointmentMappings>
                    </dxsch:DataSource.AppointmentMappings>
                </dxsch:DataSource>
            </dxsch:SchedulerControl.DataSource>
            
            <dxsch:SchedulerControl.RibbonActions>
                <!--Remove the Window group from the Home tab.-->
                <!--<dxb:RemoveAction ElementName="{x:Static Member=dxsch:DefaultBarItemNames.Groups_Home_Window }" />-->
                <!--Remove the Go to Today item on the Home tab, in the Navigate group.-->
                <dxb:RemoveAction ElementName="{x:Static Member=dxsch:DefaultBarItemNames.Items_Home_Appointment_NewRecurringAppointment }" />
               
                <!--Disable the Appointment group on the Home tab.-->
                <!--<dxb:UpdateAction    ElementName="{x:Static dxsch:DefaultBarItemNames.Groups_Home_Appointment }"
                    PropertyName="IsEnabled"
                    Value="True"/>-->
                <!--Hide the Group by Date item on the Home tab, in the Group By group.-->
                <!--<dxb:UpdateAction    ElementName="{x:Static dxsch:DefaultBarItemNames.Items_Home_GroupBy_GroupByDate }"
                    PropertyName="IsVisible"
                    Value="True" />-->
                <!--Add a new group to the Home tab.-->
                <!--The group contains a single button displaying information about this example.-->
                <dxb:InsertAction ContainerName="{x:Static dxsch:DefaultBarItemNames.Pages_Home}" Index="6">
                    <dxr:RibbonPageGroup Caption="Server">
                        <dxb:BarButtonItem    Content="Refresh"
                                              Command="{Binding About_ItemClick}"
                            LargeGlyph="{dx:DXImageOffice2013 Image=Refresh_32x32.png}"/>
                    </dxr:RibbonPageGroup>
                    <!--ItemClick="About_ItemClick"-->

                </dxb:InsertAction>
            </dxsch:SchedulerControl.RibbonActions>
            
            
        </dxsch:SchedulerControl>
    </Grid>
</Window>
